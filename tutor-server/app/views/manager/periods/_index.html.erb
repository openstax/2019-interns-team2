<% extra_headers ||= [] %>
<% extra_fields_proc ||= nil %>

<table class='table table-striped'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Enrollment code</th>
      <% [extra_headers].flatten.each do |extra_header| %>
      <th><%= extra_header %></th>
      <% end %>
    </tr>
  </thead>
  <tbody>
  <% periods.each do |period| %>
    <tr>
      <td><%= period.name %></td>
      <td><%= period.enrollment_code %></td>
      <%= capture(period, &extra_fields_proc) unless extra_fields_proc.nil? %>
    </tr>
  <% end %>
  </tbody>
</table>
