<%= link_to 'Add district', new_admin_district_path, class: 'btn btn-primary' %>

<table class='table table-striped'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @districts.each do |district| %>
      <tr>
        <td><%= district.name %></td>
        <td>
          <%= link_to 'edit', edit_admin_district_path(district.id),
                              class: 'btn btn-xs btn-primary' %>
          <%= link_to 'delete', admin_district_path(district.id),
                                method: :delete,
                                data: {
                                  confirm: "Are you sure you want to delete `#{district.name}`?"
                                },
                                class: 'btn btn-xs btn-secondary' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
