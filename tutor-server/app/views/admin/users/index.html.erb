<% @page_header = "Users" %>

<%= render partial: 'manager/users/index',
           locals: { query: params[:query],
                     items: @user_search.items,
                     total_count: @user_search.total_count,
                     page: params[:page],
                     per_page: params[:per_page],
                     extra_headers: 'Actions',
                     extra_fields_proc: lambda do |user| %>
          <td>
              <%= link_to 'Edit', edit_admin_user_path(user.id), class: "btn btn-xs btn-primary" %>
              <%= link_to 'Sign in as', become_admin_user_path(user.id),
                                        method: :post, class: "btn btn-xs btn-primary" %>
              <%= link_to 'Info', info_admin_users_path(id: user.id), class: "btn btn-xs btn-primary" %>
          </td>
<% end } %>

<div><%= link_to 'Create user', new_admin_user_path, class: "btn btn-primary" %></div>
