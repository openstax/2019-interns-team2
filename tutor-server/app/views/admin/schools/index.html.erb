<%= link_to 'Add school', new_admin_school_path, class: 'btn btn-primary' %>

<table class='table table-striped'>
  <thead>
    <tr>
      <th>Name</th>
      <th>District</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @schools.each do |school| %>
      <tr>
        <td><%= school.name %></td>
        <td><%= school.district_name %></td>
        <td>
          <%= link_to 'edit', edit_admin_school_path(school.id),
                              class: 'btn btn-xs btn-primary' %>
          <%= link_to 'delete',
                      admin_school_path(school.id),
                      method: :delete,
                      data: {
                        confirm: "Are you sure you want to delete `#{school.name}`?"
                      },
                      class: 'btn btn-xs btn-secondary' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
